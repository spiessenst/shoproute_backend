{% extends "base.html.twig" %}

{% block body %}
    <div class="mt-4">
    <h2 >Winkels</h2>

        <table class="table">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Winkelnaam</th>
                <th scope="col">Afbeelding</th>
                <th scope="col">Verwijder</th>
            </tr>
            </thead>
            <tbody>
            {% for store in Stores %}

                <tr>
                    <th scope="row">{{ store.storeId }}</th>
                    <td> {{ store.storeName }}</td>
                    <td><img src="{{ asset('images/' ~ store.storeImg) }}"/>  </td>
                    <td> <button type="submit" id="{{store.storeId }}" class="btn btn-danger m-2" onclick="Delete(this.id)" >Delete</button> </td>
                </tr>

            {% endfor %}

            </tbody>
        </table>

        <h3>Voeg een Winkel toe</h3>
    <form enctype="multipart/form-data" method="POST" action="{{ path('app_stores_new') }}">
        <div class="form-group">
            <label for="winkelnaam"></label>
            <input type="text" class="form-control m-2" id="storename" name="storename" placeholder="Naam Winkel">
            <label for="image"></label>
            <input type="file" class="form-control  m-2" id="storeimage" name="storeimage" />
        </div>
        <button type="submit" class="btn btn-primary m-2">Save</button>
    </form>
    </div>
{% endblock %}
 {% block javascripts %}
     <script>
         function Delete(id) {
             window.location.href =  `/store/${id}/delete`
         }
     </script>

 {% endblock %}
